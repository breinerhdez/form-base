extends ../layout

block content

  a(href=getRoute(basePath, "create") class="btn btn-primary float-end")
    span(class="fa fa-plus")
    span  #{lang.BTN_CREATE}

  table(class="table") 
    thead
      tr 
        th(class="col-md-1") #
        th(class="col-md-433") Name
        th(class="col-md-233") E-mail
        th(class="col-md-233") Status
        th(class="col-md-22") Actions
    tbody
      each item in listObjects
        tr
          td #{++counter}
          td #{item.name}
          td #{item.email}
          td #{item.status ? "Active": "Inactive"}
          td
            a(href=getRoute(basePath, "edit", item._id) class="text-warning me-3" title="Edit")
              span(class="fa fa-pencil fa-2x")
            a(href=getRoute(basePath, "destroy", item._id) class="text-danger me-3 delete-button" title="Delete")
              span(class="fa fa-trash-o fa-2x")


