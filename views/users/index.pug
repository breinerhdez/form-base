extends ../layout

block content

  a(href=getRoute(basePath, "create") class="btn btn-primary float-end")
    span(class="fa fa-plus")
    span  #{lang.BTN_CREATE}

  table(class="table") 
    thead
      tr 
        th(class="col-md-1") #
        th(class="col-md-433") #{lang.USERS_FULLNAME}
        th(class="col-md-233") #{lang.USERS_EMAIL}
        th(class="col-md-233") #{lang.USERS_STATUS}
        th(class="col-md-22") #{lang.TEXT_ACTIONS}
    tbody
      each item in listObjects
        tr
          td #{++counter}
          td #{item.name}
          td #{item.email}
          td #{item.status ? "Active": "Inactive"}
          td
            a(href=getRoute(basePath, "edit", item._id) class="text-warning me-3" title=lang.USERS_UPDATE)
              span(class="fa fa-pencil fa-2x")
            a(href=getRoute(basePath, "destroy", item._id) class="text-danger me-3 delete-button" title=lang.USERS_DELETE)
              span(class="fa fa-trash-o fa-2x")


