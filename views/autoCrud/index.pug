extends ../layout

block content
  div.btn-tops
    a(href=getAutocrudRoute(basePath, "create", collection.path_name) class="btn btn-primary")
      span(class="fa fa-plus")
      span  #{lang.BTN_CREATE}

  .table-responsive
    table#app-table.table.table-striped
      thead
        tr
          each th in collection.collectionConfig.labels
            th= th
          th Acciones
      tbody
        each item in collectionObjects
          tr
            each attr in collection.collectionConfig.projection.split(" ")
              td= item[attr]
            td.col-md-4
              a(href=getAutocrudRoute(basePath, "edit", collection.path_name, item._id) class="btn btn-primary me-3" title=lang.BTN_UPDATE)
                span(class="fa fa-pencil")
                span  #{lang.BTN_UPDATE}
              a(href=getAutocrudRoute(basePath, "destroy", collection.path_name, item._id) class="btn btn-danger me-3 delete-button" title=lang.BTN_DELETE)
                span(class="fa fa-trash-o")
                span  #{lang.BTN_DELETE}
              a(href=getAutocrudRoute(basePath, "show", collection.path_name, item._id) class="btn btn-primary me-3" title=lang.BTN_DETAILS)
                span(class="fa fa-eye")
                span  #{lang.BTN_DETAILS}
