extends ../layout

block content

  a(href=getRoute(paths, "create") class="btn btn-primary float-end")
    span(class="fa fa-plus")
    span  Add New

  table(class="table") 
    thead
      tr 
        th(class="col-md-1") #
        th(class="col-md-433") Title
        th(class="col-md-233") Collection name
        th(class="col-md-233") Path name
        th(class="col-md-22") Actions
    tbody
      each item in listObjects
        tr
          td #{++counter}
          td #{item.title}
          td #{item.collection_name}
          td #{item.path_name}
          td
            a(href=getRoute(paths, "edit", item._id) class="text-warning me-3" title="Edit")
              span(class="fa fa-pencil fa-2x")
            a(href="#" class="text-primary me-3" title="Form")
              span(class="fa fa-list fa-2x")
            a(href=getRoute(paths, "destroy", item._id) class="text-danger me-3 delete-button" title="Delete")
              span(class="fa fa-trash fa-2x")


