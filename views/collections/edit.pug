extends ../layout

block content

  
  div(class="option-buttons")
    a(href=`/admin/fields/${item._id}` class="me-3 btn btn-primary float-end-" title=lang.FIELDS_APIDOC data-intro=lang.HELP_MSG_COLLECTION_BTN_FIELDS)
      span(class="fa fa-list")
      span  #{lang.FIELDS_APIDOC_BTN}
    a(href=`/admin/api-doc/${item.path_name}` target="_blank" class="me-3 btn btn-primary float-end-" title=lang.COLLECTIONS_APIDOC data-intro=lang.HELP_MSG_COLLECTION_BTN_APIDOC)
      span(class="fa fa-file-text-o" aria-hidden="true")
      span  #{lang.COLLECTIONS_APIDOC_BTN}


  form(method="post" action=getRoute(basePath, "update", item._id))
    nav
      .nav.nav-tabs#nav-tab(role='tablist')
        button.nav-link.active#nav-details-tab(data-bs-toggle='tab' data-bs-target='#nav-details' type='button' role='tab' aria-controls='nav-details' aria-selected='true' data-intro=lang.HELP_MSG_COLLECTION_TAB_ENTITY) #{lang.TEXT_ENTITY}
        button.nav-link#nav-api-tab(data-bs-toggle='tab' data-bs-target='#nav-api' type='button' role='tab' aria-controls='nav-api' aria-selected='false' data-intro=lang.HELP_MSG_COLLECTION_TAB_API) #{lang.TEXT_API}

    .tab-content#nav-tabContent
      .tab-pane.fade.show.active.pt-3#nav-details(role='tabpanel' aria-labelledby='nav-details-tab' data-intro=lang.HELP_MSG_COLLECTION_TAB_ENTITY_FORM)
        div(class="mb-3" data-intro=lang.HELP_MSG_COLLECTIONS_TITLE)
          label(class="form-label" for='title') #{lang.COLLECTIONS_COL_TITLE}
          input(class="form-control" type='text' name="title" id="title" placeholder='User management'  title=lang.HELP_MSG_COLLECTIONS_TITLE value=item.title required) 
        div(class="mb-3" data-intro=lang.HELP_MSG_COLLECTIONS_PATH)
          label(class="form-label" for='path_name') #{lang.COLLECTIONS_PATH}
          input(class="form-control" type='text' name="path_name" id="path_name" placeholder='user-management'  title=lang.HELP_MSG_COLLECTIONS_PATH value=item.path_name required) 
        div(class="mb-3" data-intro=lang.HELP_MSG_COLLECTIONS_NAME)
          label(class="form-label" for='collection_name') #{lang.COLLECTIONS_NAME}
          span(class="form-control" style="background-color:#e9ecef;"  title=lang.HELP_MSG_COLLECTIONS_NAME)= item.collection_name
        //- div(class="mb-3")
        //-   label(class="form-label" for='urlToAfterCreate') #{lang.COLLECTIONS_URL_AFTER_CREATE}
        //-   input(class="form-control" type='text' name="urlToAfterCreate" id="urlToAfterCreate" placeholder='https://www.google.com' value=item.urlToAfterCreate)
        div(class="mb-3 form-check form-switch" data-intro=lang.HELP_MSG_COLLECTIONS_SHOW_IN_PANELADMIN)
          input(class="form-check-input" type="checkbox" role="switch" id="showAdmin" name="showAdmin" checked=item.showAdmin title=lang.HELP_MSG_COLLECTIONS_SHOW_IN_PANELADMIN)
          label(class="form-check-label ps-1" for="showAdmin") #{lang.COLLECTIONS_SHOW_IN_PANELADMIN}
        //- div(class="mb-3 form-check form-switch")
        //-   input(class="form-check-input" type="checkbox" role="switch" id="publicForm" name="publicForm" checked=item.publicForm)
        //-   label(class="form-check-label ps-1" for="publicForm") #{lang.COLLECTIONS_PUBLIC_FORM}

      .tab-pane.fade.pt-3#nav-api(role='tabpanel' aria-labelledby='nav-api-tab' data-intro=lang.HELP_MSG_COLLECTION_TAB_API_FORM)
        div(class="mb-3 form-check form-switch")
          input(class="form-check-input" type="checkbox" role="switch" id="opt-all")
          label(class="form-check-label ps-1" for="opt-all") #{lang.ALL_OPTIONS}
        div(class="mb-3 form-check form-switch")
          input(class="form-check-input api-check" type="checkbox" role="switch" value="Y" id="opt-create" name="create" checked=item.allow_services.create=="Y")
          label(class="form-check-label ps-1" for="opt-create") #{lang.CREATE_OPTION}
        div(class="mb-3 form-check form-switch")
          input(class="form-check-input api-check" type="checkbox" role="switch" value="Y" id="opt-update" name="update" checked=item.allow_services.update=="Y")
          label(class="form-check-label ps-1" for="opt-update") #{lang.UPDATE_OPTION}
        div(class="mb-3 form-check form-switch")
          input(class="form-check-input api-check" type="checkbox" role="switch" value="Y" id="opt-delete" name="delete" checked=item.allow_services.delete=="Y")
          label(class="form-check-label ps-1" for="opt-delete") #{lang.DELETE_OPTION}
        div(class="mb-3 form-check form-switch")
          input(class="form-check-input api-check" type="checkbox" role="switch" value="Y" id="opt-list" name="list" checked=item.allow_services.list=="Y")
          label(class="form-check-label ps-1" for="opt-list") #{lang.LIST_OPTION}
        div(class="mb-3 form-check form-switch")
          input(class="form-check-input api-check" type="checkbox" role="switch" value="Y" id="opt-get-by-id" name="getById" checked=item.allow_services.getById=="Y")
          label(class="form-check-label ps-1" for="opt-get-by-id") #{lang.GET_BY_ID}

    div(class="text-end")
      a(href=getRoute(basePath, "index") class="btn btn-danger me-2" title=lang.HELP_MSG_CANCEL data-intro=lang.HELP_MSG_CANCEL) #{lang.BTN_CANCEL}
      button(class="btn btn-primary" type="submit" title=lang.HELP_MSG_SAVE data-intro=lang.HELP_MSG_SAVE) #{lang.BTN_SAVE}