extends ../../layouts/adminLayout.pug
block body-container

  div(class="app-padding-tb-5 text-right")
    a(href=urlBtnCreate class="btn btn-success fa fa-plus" title="Crear registro")

  if listObjects.length
    table(class="table table-striped")
      thead
        th Título
        th URL
        th Colección
        th Acciones
      tbody
        each row in listObjects
          tr
            td #{row.title}
            td #{row.path_name}
            td #{row.collection_name}
            td(class="col-acciones")
              a(href=urlBase+"update/"+row._id class="btn btn-primary fa fa-edit" title="Editar")
              a(href=urlBase+"delete/"+row._id class="btn btn-danger deleteOption fa fa-trash" title="Eliminar")
              a(href=urlBase+"conf-api/"+row._id class="btn btn-warning fa fa-cogs" title="Gestionar API")
              a(href="/admin/form-config/"+row._id class="btn btn-secondary fa fa-bars" title="Gestionar Formulario")
  else
    div No hay registros

block js-container
  script(src="/assets/js/crud.js") 